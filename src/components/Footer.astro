---
import { useTranslations } from '../i18n/utils';

const lang = Astro.currentLocale || 'en';
const t = useTranslations(lang as any);
---
<footer class="bg-gray-50 pt-16 pb-8 border-t border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- Brand -->
      <div class="space-y-4 flex flex-col items-center text-center">
        <a href={lang === 'es' ? '/es' : '/'} class="inline-block hover:opacity-80 transition-opacity">
            <img src="/fitpilot_logo.png" alt="FitPilot" class="h-16 w-auto" />
        </a>
        <p class="text-gray-500 text-sm leading-relaxed">
          {t('footer.tagline')}
        </p>
      </div>

      <!-- Links -->
      <div>
        <h4 class="font-bold text-secondary mb-4">{t('footer.product')}</h4>
        <ul class="space-y-2 text-sm text-gray-500">
           <li><a href="#" class="hover:text-primary transition-colors">{t('footer.features')}</a></li>
           <li><a href={lang === 'es' ? '/es/trainers' : '/trainers'} class="hover:text-primary transition-colors">{t('nav.trainers')}</a></li>
           <li><a href={lang === 'es' ? '/es/nutritionists' : '/nutritionists'} class="hover:text-primary transition-colors">{t('nav.nutritionists')}</a></li>
           <li><a href={lang === 'es' ? '/es/nutritionists' : '/nutritionists'} class="hover:text-primary transition-colors">{t('footer.pricing')}</a></li>
        </ul>
      </div>

       <div>
        <h4 class="font-bold text-secondary mb-4">{t('footer.support')}</h4>
        <ul class="space-y-2 text-sm text-gray-500">
           <li><a href={lang === 'es' ? '/es/help-center' : '/help-center'} class="hover:text-primary transition-colors">{t('footer.help_center')}</a></li>
           <li><a href={lang === 'es' ? '/es/contact' : '/contact'} class="hover:text-primary transition-colors">{t('footer.contact')}</a></li>
           <li><a href="#" class="hover:text-primary transition-colors">{t('footer.privacy')}</a></li>
           <li><a href="#" class="hover:text-primary transition-colors">{t('footer.terms')}</a></li>
        </ul>
      </div>
    </div>
    
    <div class={`border-t border-gray-200
    pt-8 flex flex-col md:flex-row
    justify-between items-center gap-4
    text-xs text-gray-400`}>
      <p>{t('footer.copyright')}</p>
       <div class="flex gap-4">
          <a href="#" class="hover:text-gray-600">Twitter/X</a>
          <a href="#" class="hover:text-gray-600">LinkedIn</a>
          <a href="#" class="hover:text-gray-600">Instagram</a>
       </div>
    </div>
  </div>
</footer>
