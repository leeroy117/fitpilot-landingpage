---
import { MotionButton } from '@components/MotionButton';
import { useTranslations } from '../i18n/utils';

const lang = Astro.currentLocale || 'en';
const t = useTranslations(lang as any);
---
<section class="pt-32 pb-12 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class={`
      inline-flex items-center gap-2 px-3 py-1 rounded-full 
      bg-blue-50 border border-blue-100 text-blue-600 
      text-xs font-medium mb-6
    `} data-aos="fade-down">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
      </span>
      {t('hero.badge')}
    </div>

    <h1 class="text-4xl md:text-6xl font-display font-extrabold text-secondary tracking-tight mb-4" data-aos="fade-up" data-aos-delay="100">
      {t('hero.empowering')} <br class="hidden md:block"/>
      <span class={`bg-gradient-to-r from-primary via-blue-400
        to-nutrition-500 text-transparent bg-clip-text`}>{t('hero.title_highlight')}</span>
    </h1>

    <p class="text-gray-600 text-lg md:text-xl max-w-2xl mx-auto mb-10 leading-relaxed" data-aos="fade-up" data-aos-delay="200">
      {t('hero.description')}
    </p>

    <div class="flex flex-col sm:flex-row justify-center gap-8 @max-xs:gap-4 mb-20" data-aos="fade-up" data-aos-delay="300">
      <MotionButton client:load className={`
          bg-secondary text-white px-8 py-3.5 rounded-full 
          font-semibold hover:bg-secondary/90 shadow-lg flex 
          items-center justify-center gap-2 cursor-pointer
      `}>
        {t('hero.get_started')}
      </MotionButton>
      <MotionButton client:load className={`bg-white text-gray-700
      border border-gray-50 px-8 py-3.5
      rounded-full font-semibold hover:bg-gray-50
      shadow-sm shadow-gray-100
      flex items-center
      justify-center gap-2 cursor-pointer`}>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        {t('hero.view_demo')}
      </MotionButton>
    </div>

    <div class={`
        relative max-w-5xl mx-auto rounded-3xl p-2 md:p-4 
        bg-white/40 backdrop-blur-sm border border-white/50 shadow-2xl
    `} data-aos="zoom-in" data-aos-delay="400">
      <div class="relative rounded-2xl overflow-hidden aspect-[4/5] md:aspect-[21/9]">
         <!-- Main Hero Image -->
         <img 
            src="/main_image_betterquality.png" 
            alt="Dashboard Preview" 
            class="w-full h-full object-cover"
         />
         
         <!-- Floating Elements Container -->
         <div class="absolute bottom-4 left-4 right-4 flex flex-col gap-3 md:block md:bottom-0 md:left-0 md:right-0">
             <!-- Floating Element: Active Calories (Left Desktop, Top Mobile) -->
             <div class={`bg-white/90 backdrop-blur md:absolute
             md:bottom-8 md:left-8 md:p-3 p-3 rounded-xl
             shadow-lg flex items-center gap-3
             border border-gray-100/50 w-full md:w-auto`} data-aos="fade-right" data-aos-delay="600">
                <div class="bg-primary/10 p-2 rounded-lg text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
                </div>
                <div>
                  <p class="text-xs text-gray-500 font-medium">{t('hero.active_calories')}</p>
                  <p class="text-sm font-bold text-gray-900">{t('hero.calculated')}</p>
                </div>
             </div>

             <!-- Floating Element: BMI (Right Desktop, Bottom Mobile) -->
             <div class={`bg-white/90 backdrop-blur md:absolute
             md:bottom-8 md:right-8 md:p-3 p-3 rounded-xl
             shadow-lg flex items-center gap-3
             border border-gray-100/50 w-full md:w-auto`} data-aos="fade-left" data-aos-delay="700">
                <div class="bg-nutrition-500/10 p-2 rounded-lg text-nutrition-500">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
                </div>
                <div>
                  <p class="text-xs text-gray-500 font-medium">{t('hero.health_metrics')}</p>
                  <p class="text-sm font-bold text-gray-900">{t('hero.latest_review')}</p>
                </div>
             </div>
         </div>
      </div>
    </div>
  </div>
</section>
