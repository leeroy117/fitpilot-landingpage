---
import { MotionButton } from '@components/MotionButton';
import { useTranslations } from '../i18n/utils';

const lang = Astro.currentLocale || 'en';
const t = useTranslations(lang as any);
---
<section class="py-24 bg-secondary">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <!-- Decorative element if needed, maybe a faint pattern -->
    
    <h2 class="text-3xl md:text-5xl font-display font-bold text-white mb-6" data-aos="fade-up">
      {t('cta.title')}
    </h2>
    <p class="text-blue-100 text-lg md:text-xl mb-10 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
      {t('cta.subtitle')}
    </p>

    <div class="flex flex-col sm:flex-row justify-center gap-4 lg:gap-6" data-aos="zoom-in" data-aos-delay="200">
      <MotionButton client:load className={`
          bg-primary hover:bg-primary/90 text-white px-6 py-3 
          rounded-xl font-medium shadow-lg flex items-center 
          justify-center gap-3 cursor-pointer
      `}>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-white"><path d="M17.8 19.33c-.7.98-1.7 2.1-2.9 2.1-.8 0-1.1-.6-2.1-.6s-1.3.6-2.1.6c-1.2 0-2.3-1.1-2.9-2.1C5.8 16.33 4.8 11.53 7.6 10c1.3-.7 2.3-1.1 3-1.1 1 0 1.5.7 2.3.7s1.3-.7 2.4-.7c1 0 1.8.5 2.3 1.2-2.1 1.2-1.7 4.1.3 5M12.9 6c.6-1 1-2.1.8-3.1-1 .2-2.2.8-2.8 1.8-.5.9-.8 1.9-.7 2.9 1 .1 2.1-.5 2.7-1.6"/></svg>
        <div class="text-left">
           <div class="text-[10px] font-medium opacity-80 uppercase leading-none">{t('cta.download_on')}</div>
           <div class="text-sm font-bold leading-tight">{t('cta.app_store')}</div>
        </div>
      </MotionButton>

       <MotionButton client:load className={`
          bg-transparent border border-gray-600 hover:bg-white/5 
          text-white px-6 shadow-lg py-3 rounded-xl font-medium 
          flex items-center justify-center gap-3 cursor-pointer
       `}>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-white"><path d="M5 20.94L18.7 12 5 3.06v17.88M19.9 12.6L18.7 12l-1.6 1.05L19.9 12.6m-1.2-1.65L17.1 12l1.6 1.05 3.2-1.85-3.2-2.25zM5.5 2.26l11.6 11.6L5.5 2.26m0 19.48l11.6-11.6L5.5 2.26m0 19.48l11.6-11.6L5.5 21.74"/></svg>
         <div class="text-left">
           <div class="text-[10px] font-medium opacity-80 uppercase leading-none">{t('cta.get_it_on')}</div>
           <div class="text-sm font-bold leading-tight">{t('cta.google_play')}</div>
        </div>
      </MotionButton>
    </div>
    
    <p class="mt-8 text-xs text-gray-400" data-aos="fade-in" data-aos-delay="300">
      {t('cta.trial')}
    </p>

  </div>
</section>
