---
import Layout from '../layouts/Layout.astro';
import { MotionButton } from '@components/MotionButton';

import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const homeUrl = lang === 'es' ? '/es' : '/';
---

<Layout title="404 - Page Not Found">
  <main class="min-h-screen flex items-center justify-center bg-gray-50 px-6 py-24">
    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      
      <!-- Text Content -->
      <div class="text-left space-y-8 order-2 lg:order-1">
        <h1 class="text-[150px] leading-none font-display font-bold text-primary">
          {t('404.title')}
        </h1>
        <h2 class="text-3xl md:text-4xl font-bold text-secondary">
          {t('404.subtitle')}
        </h2>
        <p class="text-gray-500 text-lg max-w-lg leading-relaxed">
          {t('404.description')}
        </p>
        
        <MotionButton client:load className="bg-primary hover:bg-primary/90 text-white px-8 py-4 rounded-xl font-medium shadow-lg inline-block transition-colors">
          <a href={homeUrl} class="flex items-center gap-2">
             {t('404.back_home')}
          </a>

        </MotionButton>
      </div>

      <!-- Image -->
      <div class="relative rounded-3xl overflow-hidden shadow-2xl order-1 lg:order-2">
         <img 
            src="/404_image.png" 
            alt="Runner looking confused at watch" 
            class="w-full h-auto object-cover"
         />
      </div>

    </div>
  </main>
</Layout>
